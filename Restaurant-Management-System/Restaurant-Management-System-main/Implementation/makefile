# Compiler
CXX = g++

# Compiler flags
CXXFLAGS = -Wall -g -std=c++17 -Iinclude

# Target executable
TARGET = main

# For deleting the target
TARGET_DEL = main.exe

# Source files
SRCS = src/Main.cpp src/Customer.cpp src/DessertItem.cpp src/DrinkItem.cpp src/EntreeItem.cpp src/LinkedList.cpp src/MealItem.cpp src/menuManager.cpp src/Node.cpp src/RestaurantItem.cpp src/SideDishItem.cpp

# Object files
OBJS = $(SRCS:.cpp=.o)

# Dependency files
DEPS = $(SRCS:.cpp=.d)

# Default rule to build and run the executable
all: $(TARGET) run

# Rule to link object files into the target executable
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJS)

# Rule to compile .cpp files into .o files and generate .d files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -MMD -MP -c $< -o $@

# Include the dependency files generated by -MMD
-include $(DEPS)

# Rule to run the executable
run: $(TARGET)
	./$(TARGET)

# Clean rule to remove generated files
ifeq ($(OS),Windows_NT)
clean:
	del $(subst /,\,$(TARGET_DEL) $(OBJS) $(DEPS))
else
clean:
	rm -f $(TARGET_DEL) $(OBJS) $(DEPS)
endif
