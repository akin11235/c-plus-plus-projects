# Compiler
CXX = g++

# Compiler flags
CXXFLAGS = -Wall -g -std=c++17 -Iinclude

# Target executable
TARGET = main

# For deleting the target
TARGET_DEL = main.exe

# Source files
SRCS = src/Main.cpp src/Book.cpp src/LibraryItem.cpp src/Magazine.cpp

# Object files
OBJS = $(SRCS:.cpp=.o)

# Dependency files
DEPS = $(SRCS:.cpp=.d)

# Default rule to build and run the executable
all: $(TARGET) run

# Rule to link object files into the target executable
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJS)

# Rule to compile .cpp files into .o files and generate .d files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -MMD -MP -c $< -o $@

# Include the dependency files generated by -MMD
-include $(DEPS)

# Rule to run the executable
run: $(TARGET)
ifeq ($(OS),Windows_NT)
	$(TARGET).exe
else
	./$(TARGET)
endif

# Clean rule to remove generated files
ifeq ($(OS),Windows_NT)
clean:
	del $(subst /,\,$(TARGET_DEL) $(OBJS) $(DEPS))
else
clean:
	rm -f $(TARGET_DEL) $(OBJS) $(DEPS)
endif
